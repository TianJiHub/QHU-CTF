# 应用配置
FLASK_APP=app
FLASK_ENV=development
SECRET_KEY=your-secret-key-here
JWT_SECRET_KEY=your-jwt-secret-key-here

# 数据库配置
DATABASE_URL=postgresql://username:password@localhost:5432/ctf_platform
TEST_DATABASE_URL=postgresql://username:password@localhost:5432/ctf_platform_test

# Redis 配置
REDIS_URL=redis://localhost:6379/0
REDIS_SESSION_URL=redis://localhost:6379/1

# 邮件配置
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USERNAME=your-email@gmail.com
MAIL_PASSWORD=your-app-password

# 文件上传配置
UPLOAD_FOLDER=uploads
MAX_CONTENT_LENGTH=16777216

# 安全配置
BCRYPT_LOG_ROUNDS=12
JWT_ACCESS_TOKEN_EXPIRES=3600
JWT_REFRESH_TOKEN_EXPIRES=2592000

# 外部服务
SENTRY_DSN=your-sentry-dsn-here

# 开发配置
DEBUG=true
TESTING=false

# 前端配置
FRONTEND_URL=http://localhost:3000

# 管理员配置
ADMIN_EMAIL=admin@ctfplatform.com
ADMIN_PASSWORD=admin123456